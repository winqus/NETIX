{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^@ntx/(.*)$": "<rootDir>/../src/$1",
    "^@ntx-test/(.*)$": "<rootDir>/$1"
  },
  "collectCoverageFrom": [
    "**/*.(t|j)s"
  ],
  "setupFiles": [
    "<rootDir>/../setupJest.js"
  ]
}
