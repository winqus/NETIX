{
  "name": "ntx-backend-nestjs",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest --verbose=false --detectOpenHandles --maxWorkers=1",
    "test-ci": "jest --config jest-ci.json",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage --detectOpenHandles --maxWorkers=1",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand --testTimeout=600000",
    "test:e2e": "jest --verbose=false --detectOpenHandles --config ./test/jest-e2e.json --maxWorkers=1",
    "docker-compose:up": "docker-compose up -d",
    "docker-compose:stop": "docker-compose stop",
    "docker-compose:down": "docker-compose down",
    "postinstall": "node ./scripts/postinstall"
  },
  "dependencies": {
    "@bull-board/api": "^5.21.0",
    "@bull-board/express": "^5.21.0",
    "@bull-board/nestjs": "^5.21.0",
    "@nestjs/axios": "^3.0.3",
    "@nestjs/bullmq": "^10.1.1",
    "@nestjs/cache-manager": "^2.2.2",
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.2.3",
    "@nestjs/core": "^10.0.0",
    "@nestjs/event-emitter": "^2.0.4",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/passport": "^10.0.3",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/schedule": "^4.1.0",
    "@nestjs/swagger": "^7.4.2",
    "@nestjs/throttler": "^6.0.0",
    "@tus/file-store": "^1.5.0",
    "@tus/server": "^1.9.0",
    "axios": "^1.7.7",
    "bullmq": "^5.8.7",
    "cache-manager": "^5.7.6",
    "cache-manager-redis-store": "^3.0.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "file-type": "^19.2.0",
    "fs-extra": "^11.2.0",
    "fuse.js": "^7.0.0",
    "joi": "^17.13.3",
    "jwks-rsa": "^3.1.0",
    "mongoose": "^8.4.4",
    "nanoid": "^3.3.7",
    "nest-winston": "^1.9.7",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "reflect-metadata": "^0.2.0",
    "rxjs": "^7.8.1",
    "sharp": "^0.33.5",
    "uuid": "^10.0.0",
    "winston": "^3.14.2",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@automock/adapters.nestjs": "^2.1.0",
    "@automock/jest": "^2.1.0",
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/express": "^4.17.17",
    "@types/fs-extra": "^11.0.4",
    "@types/jest": "^29.5.2",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.3.1",
    "@types/passport-jwt": "^4.0.1",
    "@types/supertest": "^6.0.0",
    "@types/unzipper": "^0.10.10",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.5.0",
    "jest-fetch-mock": "^3.0.3",
    "mongodb-memory-server": "^10.0.0",
    "prettier": "^3.0.0",
    "redis-memory-server": "^0.11.0",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "tus-js-client": "^4.2.3",
    "typescript": "^5.1.3",
    "unzipper": "^0.12.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "moduleNameMapper": {
      "^@ntx/(.*)$": "<rootDir>/$1",
      "^@ntx-test/(.*)$": "<rootDir>/../test/$1"
    },
    "testRegex": ".*\\.spec\\.ts$",
    "testPathIgnorePatterns": [
      "<rootDir>/.*-legacy/",
      ".*-legacy/.*"
    ],
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "setupFiles": [
      "<rootDir>/../setupJest.js"
    ]
  }
}
