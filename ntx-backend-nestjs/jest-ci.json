{
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "rootDir": "src",
  "moduleNameMapper": {
    "^@ntx/(.*)$": "<rootDir>/$1",
    "^@ntx-test/(.*)$": "<rootDir>/../test/$1"
  },
  "testRegex": ".*\\.spec\\.ts$",
  "testPathIgnorePatterns": [
    "<rootDir>/.*-legacy/",
    ".*-legacy/.*"
  ],
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "collectCoverageFrom": [
    "**/*.(t|j)s"
  ],
  "coverageDirectory": "../coverage",
  "testEnvironment": "node",
  "setupFiles": [
    "<rootDir>/../setupJest.js"
  ],
  "ci": true,
  "silent": false,
  "bail": false,
  "maxWorkers": 1,
  "detectOpenHandles": true,
  "forceExit": true
}